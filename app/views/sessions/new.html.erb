<div class="container">
  <p style="color: green"><%= notice %></p>
  <h2 class="title">Вход</h2>

  <p class="mt">Введите свои логин и пароль для входа</p>

<%# data: {turbo: false} отображение flash на странице, форма шлется станадартным запросом, а не через js-script %>
  <div class="mt">
    <%= form_with scope: :session, url: session_path, data: {turbo: false} do |form| %>
      <p> 
        <%= form.label :nickname %>
      </p>
      <p> 
        <%= form.text_field :nickname, class: 'form-text-field' %>
      </p>
      <p class="mt"> 
        <%= form.label :password %>
      </p>
      <p> 
        <%= form.password_field :password, class: 'form-text-field' %>
      </p>
      <p class="mt-lg"> 
        <%= form.submit 'Войти', class: 'button button-main'%>
      </p>
    <% end %>
  </div>
</div>