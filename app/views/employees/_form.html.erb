<%= form_with(model: employee) do |form| %>
  <% if employee.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(employee.errors.count, "error") %> prohibited this employee from being saved:</h2>

      <ul>
        <% employee.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mt">
    <%= form.label :name, "Имя", class: "inline text" %>
    <%= form.text_field :name, class: "inline" %>
  </div>

  <div class="mt-sm">
    <%= form.label :job_title_id, "Должность", class: "inline text" %>
    <%= form.collection_select :job_title_id, JobTitle.order(:name), :id, :name, class: "inline" %>
  </div>

  <div>
    <%= form.submit "Сохранить", class: "button button-main button-add mt" %>
  </div>
<% end %>
