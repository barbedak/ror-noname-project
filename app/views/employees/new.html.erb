<div class="container">
  <h2 class="title">Создание нового сотрудника</h2>
<p>
  <%= link_to 'Список всех сотрудников', employees_path, class: 'button button-main'%>
</p>
  <div class="mt">
    <%= form_with model: @employee do |form| %>
      <p>
        <%= form.label :name, 'Имя сотрудника' %>
      </p>
      <p>
        <%= form.text_field :name, class: 'form-text-field' %>
      </p>
      
      <p class="mt">
        <%= form.label :job_title, 'Должность' %>
      </p>
      <p>
        <%= form.text_field :job_title, class: 'form-text-field' %>
      </p>
      
      <p class="mt">
        <%=form.label :login, 'Логин' %>
      </p>
      <p>
        <%= form.text_field :login, class: 'form-text-field' %>
      </p>
      
      <p class="mt">
        <%= form.label :password, 'Пароль' %>
      </p>
      <p>
        <%= form.password_field :password, class: 'form-text-field' %>
      </p>

      <p class="mt-lg">
        <%= form.submit 'Зарегистрировать', class: 'button button-main'%>
      </p>
    <% end %>
  </div>
</div>