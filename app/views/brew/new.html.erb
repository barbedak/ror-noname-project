<h2>Добавление варки</h2>

<%= form_with model: @brew do |form| %>
  <p><%= form.label :batch, 'Партия полупродукта' %></p>
  <p><%= form.text_field :batch %></p>

  <p><%= form.label :date, 'Дата варки' %></p>
  <p><%= form.date_field :date %></p>

  <p><%= form.label :product_series, 'Серия' %></p>
  <p><%= form.select :product_series, series.map{|series| series.name} %></p>

  <p><%= form.label :product_name, 'Наименование' %></p>
  <p><%= form.select :product_name, semiproduct.map{ |semiproduct| semiproduct.name if semiproduct.series.eql?(:product_series) } %></p>

  <p><%= form.label :special_wash, 'Спец промывка ' %> <%= form.check_box :special_wash %></p>

  <p><%= form.submit 'Добавить' %></p>
<% end %>